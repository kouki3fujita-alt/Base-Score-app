:root {
    /* 5.2 Color Palette */
    --color-bg: #0A1929;
    /* Deep Blue */
    --color-text: #E4E7EB;
    /* Platinum */
    --color-primary: #D4AF37;
    /* Gold Accent */
    --color-secondary-silver: #B8C5D6;
    --color-secondary-bronze: #CD7F32;
    --color-secondary-slate: #6B7D94;

    /* Gradients */
    --gradient-hero: linear-gradient(135deg, #E4E7EB 0%, #D4AF37 100%);
    --gradient-gold: linear-gradient(135deg, #D4AF37 0%, #F59E0B 100%);
    --gradient-card: linear-gradient(180deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);

    /* 5.3 Typography */
    --font-display: 'Cinzel', serif;
    --font-body: 'Inter', sans-serif;
    --font-mono: 'JetBrains Mono', monospace;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: var(--font-body);
    background-color: var(--color-bg);
    color: var(--color-text);
    min-height: 100vh;
    overflow-x: hidden;
    line-height: 1.6;
}

/* 5.5 Layout */
.container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
}

/* Navigation */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 1.5rem 0;
    background: rgba(10, 25, 41, 0.8);
    backdrop-filter: blur(10px);
    z-index: 1000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-logo {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.5rem;
    color: var(--color-text);
    text-decoration: none;
    letter-spacing: 0.05em;
}

.nav-logo span {
    color: var(--color-primary);
}

/* Hero Section */
.hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 8rem 1rem 4rem;
    text-align: center;
    min-height: 90vh;
    position: relative;
}

.hero::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60vw;
    height: 60vw;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
    z-index: -1;
    pointer-events: none;
}

.hero-title {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.1;
    background: var(--gradient-hero);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: fadeInDown 1s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-secondary-slate);
    max-width: 800px;
    margin-bottom: 3rem;
    animation: fadeInUp 1s cubic-bezier(0.2, 0.8, 0.2, 1) 0.2s backwards;
}

/* Buttons */
.btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: 1rem;
    border-radius: 4px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
}

.btn-primary {
    background: var(--gradient-gold);
    color: #000;
    box-shadow: 0 4px 20px rgba(212, 175, 55, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 8px 30px rgba(212, 175, 55, 0.4);
}

/* Features Section */
.features {
    padding: 6rem 0;
}

.section-title {
    font-family: var(--font-display);
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 4rem;
    color: var(--color-text);
}

.grid-3 {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.card {
    background: var(--gradient-card);
    border: 1px solid rgba(255, 255, 255, 0.05);
    padding: 2.5rem;
    border-radius: 12px;
    backdrop-filter: blur(10px);
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary);
}

.card-icon {
    font-size: 2rem;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
}

.card-title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
}

.card-text {
    color: var(--color-secondary-slate);
    font-size: 1rem;
}

/* Steps Section */
.steps {
    padding: 6rem 0;
    background: rgba(255, 255, 255, 0.01);
}

.step-item {
    display: flex;
    align-items: center;
    margin-bottom: 3rem;
}

.step-number {
    font-family: var(--font-mono);
    font-size: 3rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.1);
    margin-right: 2rem;
}

.step-content h3 {
    font-family: var(--font-display);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--color-primary);
}

/* Footer */
footer {
    padding: 4rem 0;
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    color: var(--color-secondary-slate);
    font-size: 0.875rem;
}

/* Animations */
@keyframes fadeInDown {
    from {
        opacity: 0;
        transform: translateY(-30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}